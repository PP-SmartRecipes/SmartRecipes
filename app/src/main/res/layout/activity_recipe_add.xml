<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecipeAdd">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="12dp"
        app:cardCornerRadius="12dp"
        android:layout_below="@+id/title">

        <EditText
            android:id="@+id/ean"
            android:layout_width="375dp"
            android:layout_height="30dp"
            android:background="#FFFFFF"
            android:clickable="true"
            android:ems="10"
            android:focusable="true"
            android:fontFamily="@string/common_google_play_services_notification_ticker"
            android:gravity="center"
            android:hint="Nazwa"
            android:inputType="none"
            android:textColor="@color/colorPrimaryDark" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cv1"
        android:layout_margin="12dp"
        app:cardCornerRadius="12dp"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/brand"
            android:layout_width="375dp"
            android:layout_height="104dp"
            android:background="#FFFFFF"
            android:ems="10"
            android:gravity="clip_vertical"
            android:hint="Sposób przygotowania"
            android:inputType="textMultiLine" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cv2"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="12dp">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="375dp"
            android:layout_height="33dp"
            android:gravity="center" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cv7"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/cv6"
        app:cardCornerRadius="16dp">

        <Button
            android:id="@+id/confirmIng"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/buttons"
            android:text="+"
            android:textColor="@color/common_google_signin_btn_text_light" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/baloo"
        android:gravity="center"
        android:text="Dodaj przepis:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/secondTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cv6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@string/common_google_play_services_notification_ticker"
        android:gravity="center"
        android:text="Lista składników:\n(Stuknij, aby usunąć)"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/secondTitle"
        android:orientation="vertical">

        <ListView
            android:id="@+id/listview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="30dp"
            android:layout_weight="1">

        </ListView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp">

            <Button
                android:id="@+id/sendBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/buttons"
                android:text="Dodaj"
                android:textColor="@color/common_google_signin_btn_text_light_default" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cv7"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/ingredients"
                android:layout_width="187.5dp"
                android:layout_height="30dp"
                android:background="#FFFFFF"
                android:ems="10"
                android:fontFamily="@string/common_google_play_services_notification_ticker"
                android:gravity="center"
                android:hint="Nowy składnik"
                android:inputType="textPersonName"
                android:textColor="@color/colorPrimaryDark" />

            <View
                android:id="@+id/divider"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/listDivider" />

            <EditText
                android:id="@+id/quantity"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:ems="10"
                android:gravity="center"
                android:hint="Ilość"
                android:inputType="textPersonName" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/cv3"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="16dp">

        <Button
            android:id="@+id/imageButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@color/buttons"
            android:text="Dodaj zdjęcie"
            android:textColor="@color/common_google_signin_btn_text_light_default" />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/check"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/cv3"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/cv7"
        android:visibility="invisible"
        app:srcCompat="@drawable/avd_done" />

</RelativeLayout>